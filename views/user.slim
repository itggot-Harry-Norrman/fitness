    .nav_title 
        h1 Fitness
    h1 = "Logged in as:" + " " + username[0][0].to_s
    form action="/logout" method="POST"
        input type="submit" value="Logout"
form action="/add_exercise" method="POST" class="add_form"
    .leftform
        .exercise
            input type="text" name="ovning" placeholder="Add an exercise"
        .reps
            input type="text" name="reps" placeholder="How many reps"
        .reps
            input type="text" name="sets" placeholder="How many sets"   
    .day 
        input type="radio" name="day" value="mon" 
            label class="choice" Monday
        input type="radio" name="day" value="tue" 
            label class="choice" Tuesday   
        input type="radio" name="day" value="wed" 
            label class="choice" Wednesday   
        input type="radio" name="day" value="thu" 
            label class="choice" Thursday   
